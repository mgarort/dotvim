snippet verb "verbatim"
\verb|${0:verbatim}|
endsnippet

snippet _ "text underscore"
\textunderscore
endsnippet

snippet ~ "text tilde"
\textasciitilde
endsnippet

snippet i "italic"
\textit{${0:italic}}
endsnippet

snippet b "bold"
\textbf{${0:bold}}
endsnippet

snippet mbf "mathbf"
\mathbf{${0:mathbold}}
endsnippet
